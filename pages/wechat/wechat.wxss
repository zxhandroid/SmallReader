.wechat_container {
  display: flex;
  flex-direction: column;
}

.wechat {
  margin-left: 5px;
  margin-right: 5px;
  margin-top: 5px;
  background-color: #e7eaef;
  padding: 5px;
  display: flex;
  flex-direction: row;
}

.wechat_text {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.wechat_bottom {
  margin-top: 10px;
  color: gray;
  display: flex;
  flex-direction: row;
  font-size: 28rpx;
}

.title {
  flex: 1;
  margin-right: 3px;
  font-size: 30rpx;
}

.decription {
  flex: 1;
}

.ctime {
  margin-right: 10px;
}
